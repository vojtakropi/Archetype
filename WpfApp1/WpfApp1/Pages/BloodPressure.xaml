<Page x:Class="WpfApp1.Pages.BloodPressure"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WpfApp1.Pages"
      mc:Ignorable="d"
      Title="BloodPressure" Height="600" Width="800">
    <Border BorderBrush="Black" BorderThickness="2">
    <Grid Background="Moccasin">
        <Grid Height="80" VerticalAlignment="Top">
            <Label FontSize="40" Content="Krevní tlak" />
            <Button Click="ButtonBase_Save" FontSize="17" Width="100" Height="40" VerticalContentAlignment="Top" HorizontalAlignment="Right" Margin="0,0,30,0">Ulož měření</Button>
            
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="270"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
       
            <StackPanel Grid.Column="0" Margin="0, 100, 0, 0">
                <Label Height="40" Margin="0, 0, 0, 10"  FontSize="25" Content="Systolický tlak: " />
                <Label Height="40" Margin="0, 0, 0, 10" FontSize="25" Content="Diastolický tlak: " />
                <Label Height="40" Margin="0, 0, 0, 10" FontSize="25" Content="Puls: " />
                <Label Height="40" Margin="0, 0, 0, 10" FontSize="25" Content="Průměrný arter. tlak: " />
                <Label Height="40" Margin="0, 0, 0, 10" FontSize="25" Content="Pozice: " />
                <Label Height="40" Margin="0, 0, 0, 10" FontSize="25" Content="Status spánku: " />
                <Label Height="40" Margin="0, 0, 0, 10" FontSize="25" Content="Komentář: " />
            </StackPanel>
            <StackPanel Grid.Column="1" Width="500" HorizontalAlignment="Left" Margin="0, 100, 0, 0">
                <TextBox Height="40" Margin="0, 0, 0, 10" Width="250" HorizontalAlignment="Left" FontSize="25" Name="sys" > </TextBox>
                <TextBox Height="40" Margin="0, 0, 0, 10" FontSize="25" Width="250" HorizontalAlignment="Left" Name="dia" > </TextBox>
                <TextBox Height="40" Margin="0, 0, 0, 10" FontSize="25" Width="250" HorizontalAlignment="Left" Name="puls" > </TextBox>
                <TextBox Height="40" Margin="0, 0, 0, 10" FontSize="25" Width="250" HorizontalAlignment="Left" Name="art" > </TextBox>
                <ComboBox Height="40" Margin="0, 0, 0, 10" FontSize="25" Width="250" HorizontalAlignment="Left" Name="pos" > </ComboBox>
                <ComboBox Height="40" Margin="0, 0, 0, 10" FontSize="25" Width="250" HorizontalAlignment="Left" Name="sleep" > </ComboBox> 
                <TextBox TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" Height="120" FontSize="25" Name="comment" > </TextBox> 
            </StackPanel>
     
        </Grid>
    </Grid>
    </Border>
</Page>
